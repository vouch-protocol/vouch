# GitHub App ID (from GitHub App settings)
GITHUB_APP_ID=123456

# GitHub App Private Key (PEM format, base64 encoded for env var)
# Generate from: GitHub App Settings > Private keys > Generate
GITHUB_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIE...your-key-here...\n-----END RSA PRIVATE KEY-----"

# Webhook Secret (set when creating the GitHub App)
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Vouch Registry API URL (optional - set to empty for did:web only)
VOUCH_REGISTRY_URL=https://vouch-protocol.com/api

# Verification Mode:
#   "hybrid" (default) - Check GitHub GPG/SSH keys, then Vouch Registry
#   "trailer" - Check Vouch-DID trailer in commit message (enterprise mode)
VOUCH_VERIFICATION_MODE=hybrid
