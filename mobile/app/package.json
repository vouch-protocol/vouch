{
    "name": "vouch-verifier",
    "version": "1.0.0",
    "description": "Vouch Verifier - Shazam for Deepfakes & Remote Signer",
    "main": "expo-router/entry",
    "scripts": {
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "web": "expo start --web",
        "prebuild": "expo prebuild",
        "lint": "eslint .",
        "test": "jest",
        "build:rust": "cd ../core && ./build.sh bindings"
    },
    "dependencies": {
        "expo": "~51.0.0",
        "expo-camera": "~15.0.0",
        "expo-crypto": "~13.0.0",
        "expo-local-authentication": "~14.0.0",
        "expo-router": "~3.5.0",
        "expo-secure-store": "~13.0.0",
        "expo-status-bar": "~1.12.0",
        "react": "18.2.0",
        "react-native": "0.74.0",
        "react-native-safe-area-context": "4.10.0",
        "react-native-screens": "3.31.0",
        "react-native-gesture-handler": "~2.16.0",
        "react-native-reanimated": "~3.10.0",
        "@react-native-async-storage/async-storage": "1.23.0",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@babel/core": "^7.24.0",
        "@types/react": "~18.2.0",
        "typescript": "~5.3.0",
        "eslint": "^8.57.0",
        "eslint-config-expo": "~7.0.0",
        "jest": "^29.7.0",
        "jest-expo": "~51.0.0",
        "@testing-library/react-native": "^12.4.0"
    },
    "private": true,
    "expo": {
        "name": "Vouch Verifier",
        "slug": "vouch-verifier",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0a0a0f"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.vouch.verifier",
            "infoPlist": {
                "NSMicrophoneUsageDescription": "Vouch Verifier needs microphone access to detect audio watermarks",
                "NSCameraUsageDescription": "Vouch Verifier needs camera access to scan QR codes for desktop pairing",
                "NSFaceIDUsageDescription": "Vouch Verifier uses Face ID to securely sign content with your identity"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0a0a0f"
            },
            "package": "com.vouch.verifier",
            "permissions": [
                "RECORD_AUDIO",
                "CAMERA",
                "USE_BIOMETRIC",
                "USE_FINGERPRINT"
            ]
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            [
                "expo-local-authentication",
                {
                    "faceIDPermission": "Allow Vouch Verifier to use Face ID for signing."
                }
            ],
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow Vouch Verifier to access your camera for QR scanning."
                }
            ]
        ],
        "scheme": "vouch-verifier"
    }
}